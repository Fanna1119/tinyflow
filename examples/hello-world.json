{
  "id": "example-hello-world",
  "name": "Hello World Workflow",
  "description": "A simple workflow demonstrating basic TinyFlow concepts",
  "version": "1.0.0",
  "nodes": [
    {
      "id": "start",
      "functionId": "core.start",
      "params": {
        "input": { "message": "Hello" }
      },
      "position": { "x": 100, "y": 100 }
    },
    {
      "id": "set-greeting",
      "functionId": "core.setValue",
      "params": {
        "key": "greeting",
        "value": "Hello, TinyFlow!"
      },
      "position": { "x": 300, "y": 100 }
    },
    {
      "id": "log-greeting",
      "functionId": "core.log",
      "params": {
        "key": "greeting",
        "message": "The greeting is"
      },
      "position": { "x": 500, "y": 100 }
    },
    {
      "id": "end",
      "functionId": "core.end",
      "params": {
        "outputKey": "greeting"
      },
      "position": { "x": 700, "y": 100 }
    }
  ],
  "edges": [
    { "from": "start", "to": "set-greeting", "action": "default" },
    { "from": "set-greeting", "to": "log-greeting", "action": "default" },
    { "from": "log-greeting", "to": "end", "action": "default" }
  ],
  "flow": {
    "startNodeId": "start"
  },
  "metadata": {
    "author": "TinyFlow",
    "tags": ["example", "hello-world"]
  }
}
